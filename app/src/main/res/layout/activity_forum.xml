<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E9E9E"
    tools:context=".Open_Course_Activity">

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forumRecycleView">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:onClick="editPost"
        android:src="@drawable/floating_btn"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomForum_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#37474F"
            app:itemIconTint="@color/nliveo_white"
            app:itemTextColor="@color/nliveo_white"

            android:layout_gravity="bottom"
            app:menu="@menu/navigation" />

    </LinearLayout>




</RelativeLayout>
